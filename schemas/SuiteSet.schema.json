{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evoalign.org/schemas/SuiteSet.schema.json",
  "title": "EvoAlign Suite Set",
  "description": "Suite set manifest for eval provenance.",
  "type": "object",
  "required": ["suite_set_id", "suite_ids", "registry_hash", "created_at", "rfc_reference", "approvals"],
  "additionalProperties": false,
  "properties": {
    "suite_set_id": {"type": "string"},
    "suite_ids": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"}
    },
    "registry_hash": {"type": "string"},
    "created_at": {"type": "string", "format": "date-time"},
    "rfc_reference": {"type": "string"},
    "approvals": {
      "type": "array",
      "items": {"$ref": "#/$defs/Approval"}
    }
  },
  "$defs": {
    "Approval": {
      "type": "object",
      "required": ["role", "signature", "timestamp"],
      "additionalProperties": false,
      "properties": {
        "role": {"type": "string"},
        "signature": {"type": "string"},
        "timestamp": {"type": "string", "format": "date-time"}
      }
    }
  }
}
