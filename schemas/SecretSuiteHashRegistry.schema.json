{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evoalign.org/schemas/SecretSuiteHashRegistry.schema.json",
  "title": "EvoAlign Secret Suite Hash Registry",
  "description": "Registry of secret suite fingerprints for non-overlap enforcement.",
  "type": "object",
  "required": [
    "registry_version",
    "hashing_scheme",
    "generated_at",
    "suite_registry_hash",
    "suites"
  ],
  "additionalProperties": false,
  "properties": {
    "registry_version": {"type": "string"},
    "hashing_scheme": {"$ref": "#/$defs/HashingScheme"},
    "generated_at": {"type": "string", "format": "date-time"},
    "suite_registry_hash": {"type": "string"},
    "suites": {
      "type": "array",
      "items": {"$ref": "#/$defs/SecretSuiteEntry"}
    }
  },
  "$defs": {
    "HashingScheme": {
      "type": "object",
      "required": ["scheme_id", "normalization", "digest_prefix"],
      "additionalProperties": false,
      "properties": {
        "scheme_id": {"type": "string"},
        "normalization": {"type": "string"},
        "digest_prefix": {
          "type": "string",
          "enum": ["sha256:", "hmacsha256:"]
        },
        "key_id": {"type": "string"}
      }
    },
    "SecretSuiteEntry": {
      "type": "object",
      "required": [
        "suite_id",
        "suite_version",
        "suite_fingerprint_root",
        "n_test_cases",
        "test_case_fingerprints"
      ],
      "additionalProperties": false,
      "properties": {
        "suite_id": {"type": "string"},
        "suite_version": {"type": "string"},
        "suite_fingerprint_root": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]+$"
        },
        "n_test_cases": {"type": "integer", "minimum": 0},
        "test_case_fingerprints": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(sha256|hmacsha256):[a-f0-9]+$"
          },
          "uniqueItems": true
        }
      }
    }
  }
}
